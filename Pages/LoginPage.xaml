<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Rentals.Pages.LoginPage" Title="">
    <Grid RowDefinitions="*, *, *, *, *, *, *, *, *, *, *"
          ColumnDefinitions="*, *, *, *, *, *, *, *"
          >

        <Label Grid.Column="1" Grid.Row="4" Text="Welcome" FontSize="32" FontAttributes="Bold"/>
        <Label Grid.Column="1" Grid.Row="6" Text="Please log in first." FontSize="18"/>

        <Label Grid.Column="4" Grid.Row="2" Text="Username:"/>
        <Entry x:Name="usernameEntry" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="3" Placeholder="username"/>

        <Label Grid.Column="4" Grid.Row="5" Text="Password:"/>
        <Entry x:Name="passwordEntry" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="6" Placeholder="password" IsPassword="True"/>

        <Button Grid.Column="4" Grid.Row="8" Text="Log In" Clicked="onLoginButtonClicked"/>
    </Grid>
</ContentPage>